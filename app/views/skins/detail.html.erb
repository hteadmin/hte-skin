<div class="row">
  <div class="col-md-7 col-md-offset-1">
    <%=image_tag(@detail.photo.url(:medium))%>
  </div>
  <div class="col-md-3" style="border-left: 1px solid gold">
    <p class="h1"><%=@detail.name%></p>
    <p class="h3"><%= number_to_currency(@detail.price) %></p>
    <ul class="nav nav-tabs" id="mytab">
      <li class="active" ><a href="#specs" data-toggle="tab">Specs</a></li>
      <li><a href="#detail" data-toggle="tab">Detail</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade in active" id="specs"><%=@detail.specs%></div>
      <div class="tab-pane fade" id="detail"><%=@detail.detail%></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-10 col-md-offset-1" style="border-top: 1px solid green">
    <p class="lead text-center">Same Skin</p>
    <%@same_skin.each do |s|%>
      <div class="entry">
      <%= link_to image_tag(s.photo.url(:thumb)), detail_path(id: s.id)%>
      <p><%= link_to s.name,detail_path(id: s.id)%></p>
      </div>
    <%end%>
  </div>
</div>